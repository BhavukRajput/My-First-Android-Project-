<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionSecondQuizApp">
    <TextView
        android:id="@+id/Slogan2QuizApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="SECOND QUESTION"
        android:textColor="@color/white"
        android:fontFamily="@font/bungee"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="click on an option given below"
        android:textColor="@color/av_red"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Slogan2QuizApp" />

    <TextView
        android:id="@+id/txtViewQuest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Ques-2 What is the name of India's National Aquatic Animal?"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewQuest2">

        <RadioButton
            android:id="@+id/btn_q2ans1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="River Dolphine"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/btn_q2ans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crocodile         "
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/btn_q2ans3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Katla Fish        "
            android:textSize="17sp" />
    </RadioGroup>
    <Button
        android:id="@+id/bttonNextQues2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        app:layout_constraintBottom_toTopOf="@+id/backFromquizApp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"/>

    <Button
        android:id="@+id/backFromquizApp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#000"
        android:text="Back To Home Screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>